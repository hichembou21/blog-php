<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8"/>
        <title>Login</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link href='//fonts.googleapis.com/css?family=Lato:300' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="/css/style.css">
    </head>
    <body> 
    {% if ( isValide ) %}
        <section class="login container-row">
            <section class="detail-user">
                <div class="card bg-light mb-3" style="max-width: 18rem;">
                        <div class="avatar-user card-header container-col">
                            <div id="{{ user.avatar }}"> </div>
                            <h1 class="title"> welcome {{ user.username }} </h1>
                    
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">{{ user.email }}</h5>
                            <p class="card-text"></p>
                        </div>
                        <a href="{{path_for('updateuser')}}">Update</a>
                        <a href=""></a>                        
                        <a href="{{path_for('signout')}}">Sign out</a>
                        
                </div>

            </section>

            <section class="action-user container-col">
            <section class="add-article">
                    <h3 class="card-title text-center">Add article</h3>
                    <form class="form-add-article container-col" action="{{path_for('addarticle')}}" method="post">
                        <fieldset class="form-group field-add">
                        <div class="form-group">
                            <label for="article-title">Title</label>
                            <input type="text" class="form-control" name="article-title" placeholder="Title">
                        </div>
                        <div class="form-group">
                            <label for="article-content"> Message</label>
                            <textarea class="form-control" name="article-content" rows="3"></textarea>
                        </div>
                        <div class="form-group">
                                <label for="article-picture">url picture</label>
                                <input type="text" class="form-control" name="article-picture">
                        </div>
                        </fieldset>
                        <button type="submit" class="btn btn-primary sign-up-btn">Add</button>                        
                    </form>
            </section>
                
            <section class="liste-articles">
                {% for article in articles %}
                <div class="card-header">
                        <ul class="nav nav-pills card-header-pills">
                            <li class="nav-item">
                                <a class="nav-link active" href="{{ path_for('updatearticle', { 'id': article.id }) }}">Update</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active bg-danger" href="{{ path_for('deletearticle', { 'id':article.id }) }}">delete</a>
                            </li>
                        </ul>
                </div>
                <div class="row featurette presentation">
                    <div class="col-md-7">
                      <h2 class="featurette-heading article-title"> <span class="text-muted">{{article.title}} </span></h2>
                      <p class="lead article-content">{{article.content}}</p>
                    </div>
                    <div class="col-md-5">
                      <img class="img-desc featurette-image img-fluid mx-auto" alt="500x400" style="width: 500px; height: 400px;" src="{{article.picture}}" data-holder-rendered="true">
                    </div>
                </div>
                {% endfor %}
            </section>
        </section>
        </section>
    {% else %}
        <h3 class="text-center" style = 'color:red;'> User not found </h3>
    {% endif %}

    <script src="/script/app.js" type="text/javascript"></script>
    
    </body>
</html>